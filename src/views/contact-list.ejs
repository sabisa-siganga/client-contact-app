<!-- views/clientList.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact List</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Navbar -->
    <%- include('partials/nav') %>

    <!-- Main Content -->
    <div class="container client-list-container">
      <div class="d-flex justify-content-between align-items-center">
        <h1>Contact List</h1>
        <a href="/add-contact" class="btn btn-add-client btn-primary"
          >Add Contact</a
        >
      </div>

      <!-- Client Table -->
      <% if (contacts.length == 0) {%>
      <h1>No Contacts(s) found</h1>
      <% } %> <% if (contacts.length > 0) {%>
      <div class="table-container">
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Client code</th>
              <th>Action</th>

              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% clients.forEach((client, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td class="text-start"><%= client.name %></td>
              <td class="text-start"><%= client.clientCode %></td>
              <td class="text-center"><%= 20%></td>

              <td>
                <a
                  href="/clients/<%= client.id %>/edit"
                  class="btn btn-sm btn-warning"
                  >Link Client</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
