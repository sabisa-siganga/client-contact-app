<!-- views/clientList.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Client List</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Navbar -->
    <%- include('partials/nav') %>

    <!-- Main container for the client list content -->
    <div class="container pb-5">
      <!-- Header section with title and Add Client button -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Client List</h2>
        <a href="/client-form" class="btn btn-primary"> Add Client </a>
      </div>

      <!-- Client Table -->
      <% if (clients.length == 0) {%>
      <!-- Display if there are no clients -->
      <div class="no-records flex-column row-gap-3">
        No client(s) found

        <a href="/client-form" class="btn btn-primary w-25"> Add New Client </a>
      </div>
      <% } else { %>
      <div class="table-container">
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Client code</th>
              <th>No. of linked contacts</th>

              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% clients.forEach((client) => { %>
            <tr>
              <td class="text-start"><%= client.name %></td>
              <td class="text-start"><%= client.clientCode %></td>
              <td class="text-center"><%= 20%></td>

              <td>
                <a
                  href="/client-form/<%= client.id %>#link-contact"
                  class="btn btn-sm btn-secondary"
                >
                  Link Contacts
                </a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
